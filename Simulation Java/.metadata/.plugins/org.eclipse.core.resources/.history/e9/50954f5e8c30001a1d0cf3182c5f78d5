package SimulationFeux;

import java.sql.ResultSet;
import java.sql.ResultSetMetaData;
import java.util.ArrayList;

public class Simulation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("Bonjour");
		
		Coordonnee test1 = new Coordonnee(1,3);
		Intensite test2 = new Intensite(19);
		Feu feu1 = new Feu(test1, test2);
		
		System.out.println("  " + test1.getLatitude());
		System.out.println("  " + test1.getLongitude());
		System.out.println("  " + test2.getHauteur());
		
		System.out.println("  " + feu1.getPosition().getLatitude());
		SessionBDD BDD = new SessionBDD();
		
		//int result = BDD.insertionUpdateBDD("INSERT into Alertes values(2, 1, 56, 23, 10)");
		
		//System.out.println("   "+ result);
		
		ArrayList listCapteurs = new ArrayList();
		
		try 
		{
			ResultSet resultatCapteur = BDD.selectBDD("SELECT * FROM capteurs");
			
			ResultSetMetaData resultMeta = resultatCapteur.getMetaData();
			
			System.out.print("\t" + resultatCapteur.getObject(1).toString() + "\t |");
			
			while(resultatCapteur.next()){         
		        for(int i = 1; i <= resultMeta.getColumnCount(); i++)
		          System.out.print("\t" + resultatCapteur.getObject(i).toString() + "\t |");
		            
		        System.out.println("\n---------------------------------");

		      }

		
		} catch (Exception e) 
		{
			e.printStackTrace();
		}
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
	}

}
