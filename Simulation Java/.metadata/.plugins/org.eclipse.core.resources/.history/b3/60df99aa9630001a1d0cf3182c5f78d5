		        System.out.print("\t" + resultMeta.getColumnName(i).toUpperCase() + "\t *");
		         
		      System.out.println("\n**********************************");
		         
		      while(resultatCapteur.next())
		      {         
		        listCapteurs.add(new Capteur(resultatCapteur.getInt("idCapteur"), new Coordonnee(resultatCapteur.getInt("coordXCapteur"), resultatCapteur.getInt("coordYCapteur")),resultatCapteur.getBoolean("activation")));
		      }
  
			resultatCapteur.close();
			BDD.getState().close(); 
			
